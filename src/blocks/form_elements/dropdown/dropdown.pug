.dropdown
	.dropdown_title
		input(type="text"  placeholder="Сколько гостей")
		i.material-icons.dropdown_arrow expand_more
	ul.dropdown_options.dropdown--hidden
		li.option
			span Взрослые
			.calc
				span.option_btn#btn_minus -
				input#quantity(type="text" value="0")
				span.option_btn#btn_plus +
		li.option
			span Дети
			.calc
				span.option_btn#btn_minus -
				input#quantity(type="text" value="1")
				span.option_btn#btn_plus +
		li.option
			span Младенцы
			.calc
				span.option_btn#btn_minus -
				input#quantity(type="text" value="2")
				span.option_btn#btn_plus +
		.controls
			span.clear Очистить
			span.select Применить
