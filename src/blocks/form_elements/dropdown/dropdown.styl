
.calc__btn
   border: 1px solid $black--50
   border-radius: 50%  
   cursor pointer
   height 30px
   width 30px
   text-align: center
   color: $black--50
   font-size: 1.5rem
   background: none

.dropdown__head
   display flex
   align-items: center
   justify-content space-between
   width: 266px
   border: 1px solid $black--25
   box-sizing: border-box;
   border-radius: 4px 4px 0 0;
   padding: 10px 12px 
   color: $black--75

.dropdown__head:hover
   border: 1px solid $black--50

.dropdown--active
   border: 1px solid $black--50

.dropdown__arrow
   cursor pointer
   
.dropdown__options
   width: 266px
   border: 1px solid $black--50
   box-sizing: border-box;
   border-radius: 0 0 4px 4px;
   padding: 13px 12px 13px 12px
   border-top: none
   opacity: 1
   max-height: 100%
   -webkit-transition: all 0.5s;
   -moz-transition: all 0.5s;
   -ms-transition: all 0.5s;
   -o-transition: all 0.5s;
   transition: all 0.5s;

.dropdown--hidden 
   -webkit-transition: all 0.5s;
   -moz-transition: all 0.5s;
   -ms-transition: all 0.5s;
   -o-transition: all 0.5s;
   transition: all 0.5s;

   max-height: 0;
   overflow: hidden;
   opacity: 0;

// .dropdown_title 
   
   
.dropdown__option 
   display flex
   align-items: center
   justify-content space-between
   font-weight: bold
   font-size: 12px
   text-transform: uppercase
   
.calc
   display flex
   align-items: center
   input 
      width 20px
      padding 5px
      margin 10px
      text-align: center
      border: none
      font-size: 1.2rem
      background: none
.dropdown__controls
   margin-top 20px
   display flex
   align-items: center
   justify-content space-between
   font-weight: bold
   font-size: 12px
   text-transform: uppercase
   span 
      cursor pointer
.dropdown__select
   color $purple
.dropdown__clear
   color: $black--50

.disabled
   color: $black--25
   border: 1px solid $black--25
   cursor default

.hidden
   visibility hidden