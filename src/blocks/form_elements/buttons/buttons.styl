.button__title
   bold()
   uppercase()
   margin-bottom 15px

height_btn = 34px
border_radius_btn = 22px
.btn_test
   padding 0 20px
   font-size: 12px
.gradient__button
   max-width 200px
   min-width 50px
   height height_btn
   display: flex
   align-items: center
   justify-content center
   uppercase()
   font-weight: 700
   padding 2px 2px
   color: white 
   background $gradient
   border-radius: border_radius_btn
   box-sizing: content-box


.border-gradient
   max-width 200px
   min-width 46px
   box-sizing: content-box
   display: flex
   align-items: center
   justify-content center
   // padding 0 20px
   // width: (width_btn - 4)
   height height_btn
   border-radius: (border_radius_btn + 2)

   color: $purple
   font-weight: bold
   font-size: 12px
   
   background: white
 
