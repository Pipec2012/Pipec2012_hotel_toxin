.button_wrap
   width 100%
   max-width 320px
   height: 44px

.button__title
   margin-bottom 15px

.button_body
   height: 100%;
   uppercase()
   bold()

/* Текстовая кнопка  */
.button_text_wrap
   height 15px
   
.text__btn
   h3
      color: $purple
      cursor pointer

.text__btn h3:hover
   color: $black--50

 /* кнопка для отправки данных со стрелкой */

.buttton__submit
   width 100%
   height: 100%;
   cursor pointer 
   gradient()
   border-radius: 22px;
   display flex
   align-items: center
   justify-content: center
   color: white
   position relative
   h3
      color: white

.buttton__submit .material-icons
   right  15px
   position absolute

.buttton__submit:hover
   gradient--50()  

 /* кнопка с рамкой для перехода или отрытия событий */

.border__btn
   height: 100%
   max-height: 41px
   display: flex
   align-items: center
   justify-content: center
   position: relative;
   max-width: 196px;
   padding: 0 20px
   color: $purple
   
   box-sizing: content-box
   border-radius: 22px;
   background: #fff;

.border__btn:after
   content: "";
   position: absolute;
   top: -2px;
   bottom: -2px;
   left: -2px;
   right: -2px;
   gradient()
   border-radius: 22px + 2;
   z-index: -1;

.border__btn:hover:after
   gradient--50()

/* кнопка с заливкой для перехода или отрытия событий */

.fill__btn
   gradient()
   height: 100%;
   display: flex
   align-items: center
   justify-content: center
   position: relative;
   max-width: 196px;
   padding: 0 20px
   box-sizing: content-box
   border-radius: 22px;
   color white

.fill__btn:hover
   gradient--50()