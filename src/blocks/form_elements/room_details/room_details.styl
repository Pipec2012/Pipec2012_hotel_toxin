.room_details__wrap
   max-width 280px

.room_details__option
   display flex
   flex-wrap: wrap
   align-items: center
   
.option_body
   display flex

.room_details__option:not(:last-child):after
   content: ''
   display: block
   justify-content: center
   margin 20px 0
   
   width: 100%
   height: 1px
   background: rgba(31, 32, 65, 0.1)

.room_details__img
   display flex
   align-items: center
   justify-content: center
   width 48px
   
.details__title_wrap
   display flex
   flex-wrap: wrap
   justify-content: space-between 
   line-height: 24px
   margin-left 10px
   width 100%

.room_details__title
   bold()
   color: $black--75
   font-size: 0.8571rem
   width 100%