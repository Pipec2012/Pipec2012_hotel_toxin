.like_button__title
   bold()
   uppercase()
   margin-bottom 15px

.like_button_body
   display: flex
   align-items: center
   justify-content: space-around
   width: 40px
   height: 20px
   color: $black--50
   

   border: 1px solid $black--25
   box-sizing: border-box
   border-radius: 10px
   cursor pointer
   .fa-heart
      font-size: 0.8rem

   
.like_button_body:hover
   transform: scale(1.2)
   transition(0.2s)

.like_button--checked
   border: 1px solid $purple
   color: $purple
   transition(0.2s)