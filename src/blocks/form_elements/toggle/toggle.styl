.toggle_wrap
   max-height: 25px

.toggle__option
   display: flex
   align-items: center
   
   input
      -webkit-appearance: none
      appearance none

.togle__round
   width: 40px
   height: 20px
   margin 0 15px 0 0
   border: 1px solid $black--25
   box-sizing: border-box
   border-radius: 10px
   display: flex
   align-items: center
   padding: 0 4px


.toggle__circle
   width: 12px
   height: 12px
   background: $black--25
   border-radius: 50%
   transition(0.5s)

.toggle__option input:checked + .togle__round
   border: 1px solid $purple
   
   
.toggle__option input:checked + .togle__round .toggle__circle
   transition(0.4s)
   transform: translateX(18px)
   gradient()
   

