.pie_chart_wrap
  max-width 311px
  max-height: 311px
  display flex

.figure-content
  max-width 158px
  // margin: -19px
.donut-segment
  box-sizing: border-box

.pie_chart_text
  fill: #BC9CFF;
  -moz-transform: translateY(0.25em);
  -ms-transform: translateY(0.25em);
  -webkit-transform: translateY(0.25em);
  transform: translateY(0.25em);

.pie_chart_number
  font-size: 0.52rem;
  line-height: 30px;
  bold()
  text-anchor: middle;
  -moz-transform: translateY(-0.25em);
  -ms-transform: translateY(-0.25em);
  -webkit-transform: translateY(-0.25em);
  transform: translateY(-0.25em);

.pie_chart_label
   text-anchor: middle;
   uppercase()
   bold()
   font-size: 0.25rem;
   -moz-transform: translateY(0.7em);
   -ms-transform: translateY(0.7em);
   -webkit-transform: translateY(0.7em);
   transform: translateY(0.7em);


figure
  display: flex;
  justify-content: space-around;
  margin-left: -15px;
  margin-right: -15px;

.figure-content,
.figure-key 
  flex: 1;
  align-self: center;

.figure-content svg 
  height: auto;

.figure-key
  min-width: calc(8 / 12);

.figure-key [class*="shape-"]
  margin-right: 6px;

.figure-key-list
  margin: 30px 0 0 0;
  padding: 0;
  list-style: none;

.figure-key-list li
  margin: 0 0 8px;
  padding: 0;

.shape-circle
   display: inline-block;
   vertical-align: middle;
   width: 10px;
   height: 10px;
   -webkit-border-radius: 50%;
   -moz-border-radius: 50%;
   border-radius: 50%;

.shape-orange
  background: linear-gradient(180deg, #FFE39C 0%, #FFBA9C 100%);

.shape-green
  background: linear-gradient(180deg, #6FCF97 0%, #66D2EA 100%);

.shape-purple
  background: linear-gradient(180deg, #BC9CFF 0%, #8BA4F9 100%);

.shape-grey
  background: linear-gradient(180deg, #919191 0%, #3D4975 100%);

.sr-only
  position: absolute;
  width: 1px;
  height: 1px;
  margin: -1px;
  padding: 0;
  overflow: hidden;
  clip: rect(0,0,0,0);
  border: 0;