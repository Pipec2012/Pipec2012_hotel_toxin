.pagination_wrap
   width 250px
   display flex
   flex-wrap: wrap
   flex-shrink: 0

.pagination_head
   margin-bottom 15px
   bold()
   uppercase()
   font-size: 0.8571rem

.paginationjs-pages ul
   display flex
   flex-wrap: nowrap
   

.paginationjs-page
   padding 0 20px
   display flex
   align-items: center
   justify-content: center
   transition(0.3s)

.paginationjs-page:first-child
   padding: 0 20px 0 0

.paginationjs-page.active
   padding: 0
   width 40px
   height 40px
   cursor pointer
   

   gradient()
   border-radius: 50%
   flex-shrink: 0
   a
      bold()
      color: white


.paginationjs-page.active:hover,
.paginationjs-next:hover,.paginationjs-prev:hover
   transform: scale(1.2)
   transition(0.3s)
.paginationjs-page:hover
   transform: scale(1.4)


.paginationjs-ellipsis
   border: none
   margin 0 20px
   display flex
   align-items: center
   justify-content: center

.paginationjs-next,.paginationjs-prev
   display flex
   align-items: center
   justify-content: center
   transition(0.3s)

   width: 40px;
   height: 40px;
   background: linear-gradient(180deg, #6FCF97 0%, #66D2EA 100%);
   border-radius: 50%
   color: white
   cursor pointer

.rental__options
   margin-top 10px
   color: $black--75
   text-align: center