.rate_button__title
   bold()
   uppercase()
   font-size: 0.8571rem

.rate_button_body
   margin-top 15px
   cursor pointer
   .material-icons 
      gradient()
      -webkit-background-clip: text
      color: transparent

.rate_star.active ~ .rate_star:after
   content: "star_border"
.rate_star:after
   content: "star"

.rate_button_body:hover .rate_star:after
   content: "star"

.rate_star:hover ~ .rate_star:after
   content: "star_border"
