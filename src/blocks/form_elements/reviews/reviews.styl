.reviews__wrap
   width 100%
   max-width 711px

.reviews__option
   display flex
   justify-content: space-between
   width 100%

.reviews__option:not(:first-child)
   margin-top 22px

.user__block
   display flex
   flex-wrap: wrap
   justify-content: center
   align-content: flex-start
   padding-right: 5px
   
.reviews__block
   max-width 650px

.user__photo
   width 50px
   height 50px  
   img 
      width 100%
      height 100%
      border-radius: 50%
      border: 2px solid white
      box-sizing: border-box

.user__photo + .like_button_wrap
   margin-top 12px

.user_name
   margin-top 4px
   bold()
   color: $black--75

.review_data
   margin-top 10px
   color: $black--75

.review_text
   margin-top 15px
   color: $black--75