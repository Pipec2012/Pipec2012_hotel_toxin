.checkbox__head
   cursor pointer 
.checkbox__options
   opacity: 1
   max-height: 100%
   -webkit-transition: all 0.3s;
   -moz-transition: all 0.3s;
   -ms-transition: all 0.3s;
   -o-transition: all 0.3s;
   transition: all 0.3s;

.checkbox__title
   display: flex
   align-items: center
   font-weight: 800
   font-size: 12px
   text-transform: uppercase
   font-family: $bold

.checkbox__arrow
   color: $black--50
   transform: rotate(180deg) 

.checkbox__option
   display flex
   
   margin 10px 0 0 0
   align-items: center  
   color: $black--50

   input
      -webkit-appearance: none
      appearance none

.check__box
   content: ''
   width: 20px
   height: 20px
   display flex
   justify-content: center
   align-items: center

   border: 1px solid $black--25
   border-radius: 4px
   margin-right 10px
   cursor pointer
   
.checkbox__done
   visibility hidden   
   background: linear-gradient(#BC9CFF, #8BA4F9)
   -webkit-background-clip: text
   color: transparent 

.checkbox__option input:focus + .check__box
   border: 1px solid $purple

.checkbox__option input:hover + .check__box
   border: 1px solid $purple

.checkbox__option input:checked + .check__box
   border: 1px solid $purple
   
.checkbox__option input:checked + .check__box .checkbox__done
   visibility visible

.checkbox--hidden 
   -webkit-transition: all 0.3s;
   -moz-transition: all 0.3s;
   -ms-transition: all 0.3s;
   -o-transition: all 0.3s;
   transition: all 0.3s;

   max-height: 0;
   overflow: hidden;
   opacity: 0;

.checkbox__arrow--rotate
   transform: rotate(360deg);

.sub__text
   display: block
   margin 5px 0 0 32px