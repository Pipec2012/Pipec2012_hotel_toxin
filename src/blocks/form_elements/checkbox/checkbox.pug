
mixin checkbox(options)

   //- notDropdown = true - обычный чекбоксы без выпадающего списка, 
   //- title = bold - чекбоксы rich с жирным заголовком
   //- по умолчанию - выпадающий список 

   -
   if (options.notDropdown === true)
   
      .checkbox_wrap
         .checkbox__title
            h3= options.title
         ul.checkbox__options
            each elem in options.elems
               li
                  label.checkbox__option
                     
                     input(type="checkbox")
                     span.check__box
                        i.fas.fa-check.checkbox__done
                     = elem
   else if (options.richCheckbox === true)
      .rich_checkbox_wrap
         .rich_checkbox__title
            h3= options.title
         ul.rich_checkbox__options
            each elem in options.elems
               li
                  label.checkbox__option
                     
                     input(type="checkbox")
                     span.check__box
                        i.fas.fa-check.checkbox__done
                     div
                        .label__title_bold= elem.title
                  span.sub__text= elem.subTitle
   else 
      .dropdown_checkbox_wrap
         .checkbox__head
            .checkbox__title
               h3= options.title
               i.material-icons.checkbox__arrow expand_more
         ul.checkbox__options(class= options.checkboxOpen ? "" : "checkbox--hidden checkbox__arrow--rotate")
            each elem in options.elems
               li
                  label.checkbox__option
                     
                     input(type="checkbox")
                     span.check__box
                        i.fas.fa-check.checkbox__done
                     = elem
                     

            

            