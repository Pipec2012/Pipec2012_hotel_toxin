placeholder-input(color)
  input::-webkit-input-placeholder,
  input::-webkit-input-placeholder,
  input::-webkit-input-placeholder
    color color



.text-field legend 
    font-family: $bold
input 
    width: 320px
    // height: 44px
    border: 1px solid $black--25
    box-sizing: border-box;
    border-radius: 4px
    padding: 13px 15px
    margin-top: 15px

input::-webkit-input-placeholder { color:$black--25 }
input::-moz-placeholder { color:$black--25 }

input:hover, :focus
    border: 1px solid $black--50


input:hover::-webkit-input-placeholder { color:$black--75 }
input:hover::-moz-placeholder { color:$black--75 }

