.header_wrap
  margin: 0 auto
  width 100%

.header
   max-width 1160px
   margin: 0 auto
   display flex
   flex-wrap: nowrap
   justify-content space-between
   color: $black--50
   align-items: center 
   height 70px
   padding: 0 15px 0 15px

.header__navbar-wrapper
   display flex
   flex-wrap: nowrap
   align-items: center

   margin-left 20%
   ul
      display flex
      flex-wrap: nowrap
      justify-content space-between
      width 527px
   li
      display flex 
      align-items: center
      
.navbar__link
   color: $black--50

li:first-child .navbar__link
   bold()

.navbar__link:hover,.navbar__link:hover + .navbar__arrow
   color: $purple

.navbar__link:focus
   border-bottom-style: solid
   border-color: $black--25
   margin-top 4px

.logo__link
   display flex
   align-items: center
   flex-basis: 35%
   img:nth-child(2)
      margin-left 12.5px

.header__user_logged:before
   content: ''
   width 1px
   height 30px
   margin-right 30px
   background rgba(31, 32, 65, 0.1)

/* Авторизованный пользователь */

.header__user_logged
   display flex
   align-items: center
   display none

/* Гость без авторизации */

.header__login_block
   display flex
   align-items: center
   justify-content space-between
   .button_wrap:first-child
      margin-right 20px