.room_search_card__wrap
   width: 380px;
   height: 374px;
   padding: 40px 30px 30px 30px

   border: 1px solid rgba(0, 0, 0, 0.12);
   box-sizing: border-box;
   box-shadow: 0px 0px 25px rgba(0, 0, 0, 0.2);
   border-radius: 4px;
   display: flex
   justify-content: center
   flex-wrap: wrap
   background: $white
   

.room_search_card__wrap .data_dropdown__body
   margin-top 20px

.room_search_card__title
   max-width 320px
   max-height: 60px

.data_dropdown__wrap + .dropdown__wrap
   margin-top 20px

.dropdown__wrap + .button_wrap
   margin-top 30px