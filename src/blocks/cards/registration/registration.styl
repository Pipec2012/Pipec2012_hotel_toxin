.registration_card__wrap
   width: 380px;
   height: 646px;
   
   border: 1px solid rgba(0, 0, 0, 0.12);
   box-sizing: border-box;
   box-shadow: 0px 0px 25px rgba(0, 0, 0, 0.2);
   border-radius: 4px;
   display: flex
   flex-wrap: wrap
   padding: 40px 30px 30px 30px

.registration_card__body
   margin-top 20px

.radio_btn_wrap + .text_field__wrap
   margin 20px 0

.toggle_wrap + .button_wrap
   margin 20px 0 30px 0
.registration__sign_in .button_wrap
   max-width 91px

.registration__sign_in
   display: flex
   justify-content: space-between
   align-items: center