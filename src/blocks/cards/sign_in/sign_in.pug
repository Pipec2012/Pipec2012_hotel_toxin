include ../../form_elements/text_field/text_field
include ../../form_elements/buttons/buttons

mixin sign_in_card()
   .sign_in_card__wrap
      form()#sign_in_card
         .sign_in_card__title
            h1 Войти
         .sign_in_card__body
         
            +text_field({
               elems: [
                  {type: "email"},
                  {type: "password", placeholder: "Пароль"}
               ]
               })

            +button({name: "войти", submit: true})

            .sign_in_block-registration
               p Нет аккаунта на Toxin?
               +button({ border: true, name: "Создать", linkName: "./registration_page.html"})