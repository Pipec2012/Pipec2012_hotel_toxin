.header_wrap
  margin: 0 auto
  width 100%
.header
   display flex
   flex-wrap: nowrap
   justify-content space-around
   color: $black--50
   align-items: center  

.header__navbar-wrapper
   display flex
   flex-wrap: nowrap
   justify-content space-between
   width: 527px
   align-items: center
   flex-basis: 40%
   li
      display flex 
      align-items: center
.navbar__link
   color: $black--50
.logo__link
   display flex
   align-items: center
   flex-basis: 35%
// .navbar_arrow
//    color: $black--50
.header__user_logged:before
   content: ''
   width 1px
   height 30px
   margin-right 30px
   background rgba(31, 32, 65, 0.1)

/* Авторизованный пользователь */

.header__user_logged
   display flex
   align-items: center
   display none

/* Гость без авторизации */

.header__login_block
   display flex
   align-items: center
   justify-content space-between
.registr__btn
   margin-left 20px