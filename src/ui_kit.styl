/* обнуление стандартных стилей */
*   
    margin: 0
    padding: 0
    list-style-type: none
    text-decoration: none
:active, :hover, :focus
    outline: 0
    outline-offset: 0
    

a
    color: black

button 
  padding: 0;
  border: none;
  font: inherit;
  color: inherit;
  background-color: transparent

body
    height 200vh
    width 95%
    margin: 0 auto
    font-family: 'Quicksand-Regular','Montserrat-Regular', sans-serif
.section_ui_kit
    margin-top: 6vw
    display: flex
    flex-wrap: wrap
    justify-content space-between
    
/* Временная разметка для разбивки бллоков  */
.ui_kit_line
    width 100%
    height 20px
    margin 15px
    background: rgba(31, 32, 65, 0.25)