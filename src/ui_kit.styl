/* обнуление стандартных стилей */
*   
    margin: 0
    padding: 0
    list-style-type: none
    text-decoration: none
:active, :hover, :focus
    outline: 0
    outline-offset: 0
    

a
    color: black

button 
  padding: 0;
  border: none;
  font: inherit;
  color: inherit;
  background-color: transparent

body
    height 300vh
    width 100%
    font-family: 'Montserrat-Regular', sans-serif
    
.section_ui_kit
    display: flex
    margin: 0 2%
    flex-wrap: wrap
    justify-content space-between
    
