/* обнуление стандартных стилей */
*   
    margin: 0
    padding: 0
    list-style-type: none
    text-decoration: none
:active, :hover, :focus
    outline: 0
    outline-offset: 0
    

a
    color: black

button 
  padding: 0;
  border: none;
  font: inherit;
  color: inherit;
  background-color: transparent

html
    font-family: 'Montserrat-Regular', sans-serif
    


/* --- Landing page --- */

.landing_wrap
    width 100%
    // max-width 1440px
    margin: 0 auto
    height 830px
    background: url(img/landing_page.png) no-repeat center;
    background-size: cover;

.landing_content
    max-width 1160px
    margin: 0 auto
    display: flex
    justify-content: space-between
    padding: 0 20px


.landing_wrap .room_search_card__wrap
    margin-top 70px
.landing_text
    margin-top 764px
    max-width 297px
    text-align: right 


