@import 'fonts/fonts.styl';
@import 'blocks/colors_type/colors_type.styl';
@import 'blocks/form_elements/form_elements.styl';
@import 'blocks/cards/cards';
@import 'blocks/headers_footers/headers_footers';

@import '../node_modules/ion-rangeslider/css/ion.rangeSlider.css';
@import '../node_modules/air-datepicker/dist/css/datepicker.min.css';
@import '../node_modules/slick-carousel/slick/slick.css';
@import '../node_modules/slick-carousel/slick/slick-theme.css';

/* обнуление стандартных стилей */
*   
    margin: 0
    padding: 0
    list-style-type: none
    text-decoration: none
:active, :hover, :focus
    outline: 0
    outline-offset: 0

a
    color: black

button 
  padding: 0;
  border: none;
  font: inherit;
  color: inherit;
  background-color: transparent

html
    font-family: 'Montserrat-Regular', sans-serif
    
.display-none
    display: none!important

/* --- Landing page --- */

.landing_wrap
    width 100%
    max-width 1920px
    margin: 0 auto
    height 830px
    background: url(img/landing_page.png) no-repeat center;
    background-size: cover;

.landing_content
    max-width 1160px
    margin: 0 auto
    display: flex
    justify-content: space-between
    padding: 0 20px

.landing_wrap .room_search_card__wrap
    margin-top 70px

.landing_text
    margin-top 764px
    max-width 297px
    text-align: right 

/* --- Sign in page --- */

.sign_in_wrap
    width 100%
    max-width 1920px
    margin: 0 auto
    height 703px
    background: url(img/registr_sign_in_bgr.png) no-repeat center;
    background-size: cover;

.sign_in_content
    max-width 1160px
    height 100%
    margin: 0 auto
    display: flex
    justify-content: center
    align-items: center
    padding: 0 20px

/* --- Registration page --- */

.registration_wrap
    width 100%
    max-width 1920px
    margin: 0 auto
    height 703px
    background: url(img/registr_sign_in_bgr.png) no-repeat center;
    background-size: cover;

.registration_content
    max-width 1160px
    height 100%
    margin: 0 auto
    display: flex
    justify-content: center
    align-items: center
    padding: 0 20px

/* --- Search page --- */

.search_room_page
    width 100%
    margin: 30px auto 0 auto
    max-width 1920px

.search_room_content
    max-width 1160px
    margin: 0 auto
    display: flex
    justify-content: space-between
    padding: 0 20px

.filter_column
    display flex
    flex-wrap: wrap
    width 266px
    align-content: flex-start

.filter_column>div
    margin-top 30px

.filter_column>div:first-child
    margin-top 0

.filter_column>div:nth-child(2)
    margin-top 20px

.rooms_column
    width 100%
    display flex
    flex-wrap: wrap
    justify-content: space-between
    margin-left 60px

.rooms_column__title
    width 100%

.rooms_block
    display flex
    flex-wrap: wrap
    justify-content: space-between
    margin-top 20px

.search_room_page .room_wrap
    margin-bottom 20.5px

.rooms_pagination
    display flex
    width 100%
    justify-content: center
    margin-top 20px

.search_room_page + .footer_wrap
    margin-top 70px

/* --- Room details --- */

.room_details_page
    width 100%
    margin: 0 auto

.room_details__photos
    display flex
    margin: 0 auto
    height: 485px
    max-width 1920px
    

.left_column_photo
    width 65%
    height 100%
    display flex
    flex-shrink: 0
    img 
        width 100%
        height 100%

.room_info__title + .room_details__wrap
    margin-top 20px

.room_info__title + .pie_chart_wrap
    margin-top 20px

.right_column_photo
    display flex
    flex-wrap: wrap
    width 100%
    img 
        height 50%
        width 100%

.room_details_content
    max-width 1160px
    margin: 67px auto 0 auto
    display: flex
    justify-content: space-between
    padding: 0 20px

.room_info_wrap
    margin: 0 auto
    display: flex
    justify-content: space-between

.room_info__title-wrap
    display: flex
    justify-content: space-between
    align-items: flex-end
    max-width 712px
    margin-bottom 20px

.room_info__reviews
    color: $black--50


.room_info__left_column
    flex-basis 50%

.room_info__right_column
    flex-basis 50%
    
.room_info__title
    font-size: 1.7143rem
    bold()

.room_details__reviews
    margin-top 30px

.room_rules_wrap
    margin: 30px auto 70px auto
    display: flex
    justify-content: space-between

.room_rules__left_column
    flex-basis 50%

.room_rules__right_column
    flex-basis 50%
    max-width 341px

.room_info__text
    margin-top 20px
    line-height: 24px;